{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018", // Node.js 10
    "module": "commonjs",
    "lib": ["es2018"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "noEmitOnError": true,
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "include": [
    "source"
  ]
}
